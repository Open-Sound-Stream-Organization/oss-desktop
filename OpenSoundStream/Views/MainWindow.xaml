<Window x:Class="OpenSoundStream.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenSoundStream"
        mc:Ignorable="d"
        Height="450" Width="800" ResizeMode="CanResize" Background="#3A3A3A">



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="55*" />
            <ColumnDefinition Width="59*" />
            <ColumnDefinition Width="66*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="89*" />
            <ColumnDefinition Width="49*" />
            <ColumnDefinition Width="194*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" HorizontalAlignment="Left" Width="30" Source="./Icons/round_play_circle_filled_white_18dp.png" Height="32" VerticalAlignment="Bottom" Margin="0,0,0,2.5" Grid.ColumnSpan="2"/>
                <Label Grid.Column="1" Content="Big Player" Margin="49.5,10,-11.5,0" VerticalAlignment="Top" Height="34" Foreground="White" FontSize="18" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" HorizontalAlignment="Left" Width="30" Source="Icons/round_person_white_18dp.png" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                <Label Grid.Column="1" Content="Artists" HorizontalAlignment="Left" Margin="19.5,7,0,0" VerticalAlignment="Top" Height="33" Width="100" Foreground="White" FontSize="18" />
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" HorizontalAlignment="Left" Width="30" Source="Icons/round_album_white_18dp.png" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,3"/>
                <Label Grid.Column="1" Content="Albums" HorizontalAlignment="Left" Margin="22.5,7,0,0" VerticalAlignment="Top" Height="33" Width="96" Foreground="White" FontSize="18"/>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" HorizontalAlignment="Left" Width="30" Source="Icons/round_audiotrack_white_18dp.png" Height="30" VerticalAlignment="Bottom" RenderTransformOrigin="0.483,0.267" Grid.ColumnSpan="2" />
                <Label Grid.Column="1" Content="Tracks" HorizontalAlignment="Left" Margin="50.5,10,-20.5,0" VerticalAlignment="Top" Height="30" Width="98" Foreground="White" FontSize="18" />
            </Grid>
        </Grid>

        <!--Music Control-->
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="45" Margin="0,27,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.1,0.348" Source="./Icons/round_skip_previous_white_18dp.png"/>
        <Image Grid.Column="2" Name="PlayButtonImage" HorizontalAlignment="Left" Height="45" Margin="5,27,0,0" VerticalAlignment="Top" Width="54" RenderTransformOrigin="0.1,0.348" Source="Icons/round_play_arrow_white_18dp.png" MouseDown="StartPlayer"/>
        <Image Grid.Column="3" HorizontalAlignment="Left" Height="45" Margin="10,27,0,0" VerticalAlignment="Top" Width="56" RenderTransformOrigin="0.1,0.348" Source="Icons/round_skip_next_white_18dp.png"/>

        <!--Volum Control-->
        <Grid Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Slider Grid.Row="1" HorizontalAlignment="Left" Margin="0,22.5,0,-39" Width="133"/>
            <Label Grid.Row="0" Name="CurrentTrackTime" Content="0:00" HorizontalAlignment="Left" Foreground="White" Height="26" VerticalAlignment="Top" Margin="0,9,0,0" Grid.RowSpan="2"/>
        </Grid>

        <!--Curren Title and Artist-->
        <Grid Grid.Column="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Name="CurrentTrackArtist" Content="Artist" HorizontalAlignment="Left" Margin="21,39.5,0,-38" VerticalAlignment="Top" Foreground="White" FontSize="13" RenderTransformOrigin="0.506,1.873"/>
            <Label Grid.Row="1" Name="CurrentTrackName" Content="Title" HorizontalAlignment="Left" Margin="21,6.5,0,-18" Width="68" Foreground="#FFFBFBFB" FontSize="20"/>
        </Grid>

        <!--Shuffel-->
        <Image Grid.Column="6" HorizontalAlignment="Left" Height="45" Margin="4,21,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.1,0.348" Source="Icons/round_repeat_white_18dp.png"/>

        <!--Volum Control-->
        <Grid Grid.Column="7" Margin="18,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" HorizontalAlignment="Left" Height="45" Margin="0,29,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="0.1,0.348" Source="Icons/round_volume_mute_white_18dp.png"/>
            <Slider Grid.Column="1" x:Name="VolumSlider" HorizontalAlignment="Left" Margin="0,44,0,0" VerticalAlignment="Top" Height="18" Width="111" ValueChanged="adjustVolume"/>
        </Grid>
    </Grid>
</Window>


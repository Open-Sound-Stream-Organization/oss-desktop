<Window x:Class="OpenSoundStream.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenSoundStream"
        mc:Ignorable="d"
        Height="450" Width="800" ResizeMode="NoResize" Background="#3A3A3A">

    <Grid HorizontalAlignment="Left" Height="444" Margin="0,-23,-5,0" VerticalAlignment="Top" Width="800">
        <Grid HorizontalAlignment="Left" Height="418" Margin="10,26,0,0" VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.5,0.5">

            <Grid Name="MusicMenu" Height="149" VerticalAlignment="Top" RenderTransformOrigin="1.195,1.34" Margin="10,10,10,0">

                <Grid MouseDown="Section_MouseDown" Name="BigPlayer" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="140" Margin="0,0,-10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" Width="35" Source="./Icons/round_play_circle_filled_white_18dp.png" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,3" Grid.ColumnSpan="2"/>
                    <Label Content="Big Player" Margin="29,0,10,0" VerticalAlignment="Top" Height="40" Foreground="White" FontSize="18" Grid.Column="1"/>
                </Grid>

                <Grid MouseDown="Section_MouseDown" x:Name="Artists" HorizontalAlignment="Left" Height="43" VerticalAlignment="Top" Width="130" Margin="0,33,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" Width="35" Source="Icons/round_person_white_18dp.png" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,3" Grid.ColumnSpan="2"/>
                    <Label Content="Artists" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Top" Height="33" Width="99" Foreground="White" FontSize="18" Grid.Column="1"/>
                </Grid>

                <Grid MouseDown="Section_MouseDown" x:Name="Albums" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="130" Margin="0,76,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" Width="35" Source="Icons/round_album_white_18dp.png" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,3" Grid.ColumnSpan="2"/>
                    <Label Content="Albums" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Top" Height="40" Width="96" Foreground="White" FontSize="18" Grid.Column="1"/>
                </Grid>

                <Grid MouseDown="Section_MouseDown" x:Name="Tracks" HorizontalAlignment="Left" Height="34" VerticalAlignment="Top" Width="130" Margin="0,113,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="53*"/>
                    </Grid.ColumnDefinitions>
                    <Image HorizontalAlignment="Left" Width="35" Source="Icons/round_audiotrack_white_18dp.png" Height="40" VerticalAlignment="Bottom" Margin="-1,0,0,3" Grid.ColumnSpan="2"/>
                    <Label Content="Tracks" HorizontalAlignment="Left" Margin="29,0,0,0" VerticalAlignment="Top" Height="40" Width="98" Foreground="White" FontSize="18" Grid.Column="1"/>
                </Grid>

            </Grid>
            <Image Name="TrackCover" HorizontalAlignment="Left" Height="120" Margin="20,288,0,0" VerticalAlignment="Top" Width="120"/>
        </Grid>

        <Grid HorizontalAlignment="Left" Height="68" Margin="184,26,0,0" VerticalAlignment="Top" Width="616">
            <Image HorizontalAlignment="Left" Height="45" Margin="0,3,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.1,0.348" Source="./Icons/round_skip_previous_white_18dp.png"/>
            <Image HorizontalAlignment="Left" Height="45" Margin="76,3,0,0" VerticalAlignment="Top" Width="56" RenderTransformOrigin="0.1,0.348" Source="Icons/round_skip_next_white_18dp.png"/>
            <Image Name="PlayButtonImage" HorizontalAlignment="Left" Height="45" Margin="38,3,0,0" VerticalAlignment="Top" Width="54" RenderTransformOrigin="0.1,0.348" Source="Icons/round_play_arrow_white_18dp.png" MouseDown="StartPlayer"/>

            <Slider HorizontalAlignment="Left" Margin="148,26,0,0" VerticalAlignment="Top" Height="39" Width="133"/>
            <Label Name="CurrentTrackTime" Content="0:00" HorizontalAlignment="Left" Margin="148,0,0,0" Foreground="White" Height="26" VerticalAlignment="Top"/>

            <Label Name="CurrentTrackArtist" Content="Artist" HorizontalAlignment="Left" Margin="286,22,0,0" VerticalAlignment="Top" Foreground="White" FontSize="13"/>
            <Label Name="CurrentTrackName" Content="Title" HorizontalAlignment="Left" Margin="286,-1,0,0" VerticalAlignment="Top" Height="33" Width="68" Foreground="#FFFBFBFB" FontSize="20"/>

            <Image HorizontalAlignment="Left" Height="45" Margin="408,3,0,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.1,0.348" Source="Icons/round_repeat_white_18dp.png"/>

            <Image HorizontalAlignment="Left" Height="52" Margin="448,-2,0,0" VerticalAlignment="Top" Width="58" RenderTransformOrigin="0.1,0.348" Source="Icons/round_volume_mute_white_18dp.png"/>
            <Slider x:Name="VolumSlider" HorizontalAlignment="Left" Margin="485,15,0,0" VerticalAlignment="Top" Height="17" Width="111" ValueChanged="adjustVolume"/>

        </Grid>

        <ListBox Name="PlaylistView" Background="#3A3A3A" HorizontalAlignment="Left" Height="125" Margin="23,189,0,0" VerticalAlignment="Top" Width="137"/>
        <ListBox Name="TitleView" Background="#3A3A3A" HorizontalAlignment="Left" Height="319" Margin="184,94,0,0" VerticalAlignment="Top" Width="587"/>

    </Grid>
</Window>
